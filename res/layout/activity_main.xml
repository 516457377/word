    tools:context="com.example.l_donghua.MainActivity" >

    <TextView
        android:id="@+id/tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tex_bj"
        android:text="11111111111111/n22222222222222222222222222222222/n3333333333kjaslkdjlksajd"
        android:visibility="gone" />

    <Button
        android:id="@+id/but_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="点击" />

    <com.example.l_donghua.XEditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_launcher"
        android:drawableRight="@drawable/ic_launcher"
        android:ems="10" />

</RelativeLayout>